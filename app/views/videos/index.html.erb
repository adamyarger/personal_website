<section class="subject">
	<div class="topic-header">
		<h1>Videos</h1>
	</div>
</section>

<div class="bigbox">
	<div class="box">
		<% @videos.each do |video| %>
			<article class="type-system-geometric">
			  <!-- <p class="type">Article Type</p> -->
			  
			  <h1><%= link_to video.title, video %></h1>
			  <p>
			  	<%= video.description %>
			  </p>

			  <p class="date">
			  	<span class="continue-reading"><%= link_to "Watch Video", video %></span>
			  	<%= video.created_at.strftime("%D") %>
			  </p>

			  <p class="author"></p>
			</article>
		<% end %>
	</div>
</div>
